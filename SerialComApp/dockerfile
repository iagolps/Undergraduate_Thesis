FROM gcc:latest
USER root
COPY ["interferometro_serial2.cpp", "C:/Users/Iago Leal/Desktop/TCC/TCC/SerialComApp/"]
RUN mkdir -p C:/Users/Iago Leal/Desktop/TCC/TCC/SerialComApp/
WORKDIR C:/Users/Iago Leal/Desktop/TCC/TCC/SerialComApp/
RUN g++ -o serial_app interferometro_serial2.cpp
CMD ["./serial_app"]

